void set_pwm(uint16_t n)
{
	TIM_OC_InitTypeDef sConfigOC;//what does this mean?
	sConfigOC.OCMode= TIM_OCMODE_PWM1;
	sConfigOC.Pulse=n;
	sConfigOC.OCNPolarity=TIM_OCPOLARITY_HIGH;
	sConfigOC.OCFastMode=TIM_OCFAST_DISABLE;
	HAL_TIM_PWM_ConfigChannel(&htim2, &sConfigOC, TIM_CHANNEL_1);
	//HAL_TIM_PWM_Start(&htim2, TIM_CHANNEL_1);
}

void LEDS_INIT(void)
{
	leds[0].LedPin=LED1_Pin;
	leds[0].LedPort=LED1_GPIO_Port;
	leds[1].LedPin=LED2_Pin;
	leds[1].LedPort=LED2_GPIO_Port;
	leds[2].LedPin=LED3_Pin;
	leds[2].LedPort=LED3_GPIO_Port;
	leds[3].LedPin=LED4_Pin;
	leds[3].LedPort=LED4_GPIO_Port;
	leds[4].LedPin=LED5_Pin;
	leds[4].LedPort=LED5_GPIO_Port;
	leds[5].LedPin=LED6_Pin;
	leds[5].LedPort=LED6_GPIO_Port;
}
void KEYS_INIT(void)
{
	keys[0].KeyPin=KEY1_Pin;
	keys[0].KeyPort=KEY1_GPIO_Port;
	keys[1].KeyPin=KEY2_Pin;
	keys[1].KeyPort=KEY2_GPIO_Port;
	keys[2].KeyPin=KEY3_Pin;
	keys[2].KeyPort=KEY3_GPIO_Port;
	keys[3].KeyPin=KEY4_Pin;
	keys[3].KeyPort=KEY4_GPIO_Port;
	keys[4].KeyPin=KEY5_Pin;
	keys[4].KeyPort=KEY5_GPIO_Port;
	keys[5].KeyPin=KEY6_Pin;
	keys[5].KeyPort=KEY6_GPIO_Port;
}
