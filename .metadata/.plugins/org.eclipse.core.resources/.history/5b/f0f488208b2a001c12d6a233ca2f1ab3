/**
  * @brief GPIO Initialization Function
  * @param None
  * @retval None
  */
static void MX_GPIO_Init(void)
{
  GPIO_InitTypeDef GPIO_InitStruct = {0};

  /* GPIO Ports Clock Enable */
  __HAL_RCC_GPIOD_CLK_ENABLE();
  __HAL_RCC_GPIOA_CLK_ENABLE();
  __HAL_RCC_GPIOB_CLK_ENABLE();

  /*Configure GPIO pin Output Level */
  HAL_GPIO_WritePin(GPIOA, LED1_Pin|LED4_Pin|LED2_Pin, GPIO_PIN_SET);

  /*Configure GPIO pin Output Level */
  HAL_GPIO_WritePin(GPIOB, LED3_Pin|LED5_Pin|LED6_Pin|LED_Pin, GPIO_PIN_SET);

  /*Configure GPIO pins : LED1_Pin LED4_Pin LED2_Pin */
  GPIO_InitStruct.Pin = LED1_Pin|LED4_Pin|LED2_Pin;
  GPIO_InitStruct.Mode = GPIO_MODE_OUTPUT_PP;
  GPIO_InitStruct.Pull = GPIO_PULLUP;
  GPIO_InitStruct.Speed = GPIO_SPEED_FREQ_HIGH;
  HAL_GPIO_Init(GPIOA, &GPIO_InitStruct);

  /*Configure GPIO pins : LED3_Pin LED5_Pin LED6_Pin LED_Pin */
  GPIO_InitStruct.Pin = LED3_Pin|LED5_Pin|LED6_Pin|LED_Pin;
  GPIO_InitStruct.Mode = GPIO_MODE_OUTPUT_PP;
  GPIO_InitStruct.Pull = GPIO_PULLUP;
  GPIO_InitStruct.Speed = GPIO_SPEED_FREQ_HIGH;
  HAL_GPIO_Init(GPIOB, &GPIO_InitStruct);

  /*Configure GPIO pins : KEY5_Pin KEY1_Pin KEY2_Pin KEY3_Pin */
  GPIO_InitStruct.Pin = KEY5_Pin|KEY1_Pin|KEY2_Pin|KEY3_Pin;
  GPIO_InitStruct.Mode = GPIO_MODE_INPUT;
  GPIO_InitStruct.Pull = GPIO_PULLDOWN;
  HAL_GPIO_Init(GPIOB, &GPIO_InitStruct);

  /*Configure GPIO pins : KEY4_Pin KEY6_Pin */
  GPIO_InitStruct.Pin = KEY4_Pin|KEY6_Pin;
  GPIO_InitStruct.Mode = GPIO_MODE_INPUT;
  GPIO_InitStruct.Pull = GPIO_PULLDOWN;
  HAL_GPIO_Init(GPIOA, &GPIO_InitStruct);

}

/* USER CODE BEGIN 4 */
void HAL_TIM_PeriodElapsedCallback(TIM_HandleTypeDef *htim)
{
	static int pwm_val=500;
	static int pwm_val_old=500;
	if(htim->Instance==TIM1)
	{
		if(pwm_val!=pwm_val_old)
		{
			pwm_val_old=pwm_val;
			__HAL_TIM_SET_COMPARE(&htim2, TIM_CHANNEL_1, pwm_val);
		}

	}
	if(htim->Instance==TIM3)
	{
		//HAL_GPIO_WritePin(leds[0].LedPort, leds[0].LedPin, GPIO_PIN_RESET);
		int pwm_set=0;
		for(uint8_t i=0;i<6;i++)
		{
			uint8_t KEY_STATE=HAL_GPIO_ReadPin(keys[i].KeyPort, keys[i].KeyPin);
			HAL_GPIO_WritePin(leds[i].LedPort, leds[i].LedPin, KEY_STATE);
			key_states[i]=(KEY_STATE==GPIO_PIN_SET)?1:0;
			int temp=1;
			for(int j=4; j>=i; j--)
			{

				temp*=2*key_states[i];
			}
			temp/=2;
			if(i!=5)
			{
				pwm_set+=temp;
			}
		}
		pwm_val=pwm_set*2000/32+2000;
	}
}

void HAL_UART_RxCpltCallback(UART_HandleTypeDef *huart)
{
	if(huart->Instance== USART2)
	{
		HAL_UART_Transmit_IT(&huart2, receive, 1);
		HAL_UART_Receive_IT(&huart2, receive, 1);
	}
}

